<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/ivPrivate"
                android:src="@drawable/ic_private"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/ivPublic"
                android:src="@drawable/ic_public"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag Name"
                android:textSize="25sp"
                android:layout_toRightOf="@id/ivPublic"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"
                android:id="@+id/tag_name"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayout1"
            android:layout_centerHorizontal="true"
            android:id="@+id/relLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"
                android:id="@+id/tvNumPost"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:textSize="18sp"
                android:layout_toRightOf="@id/tvNumPost"
                android:id="@+id/tvPost"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayout2"
            android:layout_marginTop="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow"
                android:background="@drawable/blue_rounded_button"
                android:visibility="visible"
                android:id="@+id/btn_follow"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unfollow"
                android:background="@drawable/red_rounded_button"
                android:visibility="invisible"
                android:id="@+id/btn_unfollow"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </RelativeLayout>

</merge>